<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@color/background_floating_material_light"
        android:orientation="vertical"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:fontFamily="sans-serif-condensed"
                android:text="Hospital Name : "
                android:textColor="@color/accent_material_dark"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/HospitalName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"
                android:textColor="@color/accent_material_dark"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/State"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="State : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/StateName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/State"
                android:layout_weight="2.4"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/district"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Timestamp"
                android:layout_weight="1.6"
                android:text="City : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/districtName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Timestamp"
                android:layout_toRightOf="@+id/City"
                android:layout_weight="2.4"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="18dp">

            <TextView
                android:id="@+id/category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Category : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/categoryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"></TextView>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/facility"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Service : "
                android:layout_marginBottom="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/facilityName"
                android:layout_width="0dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/Specialization"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Specialization : "
                android:layout_marginBottom="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/specializationName"
                android:layout_width="0dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/Medicine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Medicine : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/MedicineName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"></TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Address : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/addressName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/pincode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Pincode : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/pincodeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/telephone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Telephone No : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/telephoneNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Mobile No : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/mobileNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/Ambulance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Ambulance No : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/ambulanceNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tollFree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Toll Free : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/tollFreeNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"></TextView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/fax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Fax : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/faxName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/website"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Website : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/websiteName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/Email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Email : "
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/EmailName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

        </LinearLayout>

    </LinearLayout>
</ScrollView>
